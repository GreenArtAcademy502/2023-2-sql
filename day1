SELECT corp_id, name 
FROM corporation
WHERE corp_id % 2 = 0;

/*
Oracle, SQL Server, MySql/MariaDB
3, '김동하'
4, '김태형'
5, '김현빈'
6, '김현수'
*/
UPDATE corporation
SET NAME = 'Rachel'
WHERE corp_id = 5;









