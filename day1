CREATE TABLE corporation (
	  corp_id SMALLINT
	, NAME VARCHAR(30)
	, PRIMARY KEY (corp_id)
);
/* 
멀티라인 주석
*/

-- 싱글라인 주석
CREATE TABLE corporation2 (
	  corp_id SMALLINT PRIMARY KEY 
	, NAME VARCHAR(30) 
); 

DROP TABLE corporation3;
DROP TABLE corporation2;
DROP TABLE corporation;



