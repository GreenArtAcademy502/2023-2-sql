DROP TABLE t_user;
CREATE TABLE t_user(
	iuser INT UNSIGNED AUTO_INCREMENT PRIMARY KEY
  	, uid VARCHAR(25) NOT NULL
	, upw VARCHAR(25) NOT NULL
	, nm VARCHAR(25) NOT null
	, pic VARCHAR(100)
	, created_at DATETIME NOT NULL DEFAULT CURRENT_TIMESTAMP	
	, updated_at DATETIME not null DEFAULT CURRENT_TIMESTAMP 
	  ON UPDATE CURRENT_TIMESTAMP 
);

INSERT INTO t_user
	(uid, upw, nm)
VALUES
	('mic', '1212', '홍길동')
,  ('marine', '1212', '장보고')
,  ('craft', '1212', '신사임당');

SELECT * FROM t_user;

UPDATE t_user
SET nm = '유관순'
WHERE iuser = 1;


CREATE TABLE t_feed(
	  ifeed INT UNSIGNED AUTO_INCREMENT
	, iuser INT UNSIGNED NOT NULL
	, cntns VARCHAR(1000)
	, location VARCHAR(30)
	, created_at DATETIME NOT NULL DEFAULT CURRENT_TIMESTAMP	
	, updated_at DATETIME not null DEFAULT CURRENT_TIMESTAMP 
	  ON UPDATE CURRENT_TIMESTAMP
	, PRIMARY KEY(ifeed)
	, FOREIGN KEY (iuser) REFERENCES t_user(iuser)
);
INSERT INTO t_feed
(iuser, cntns, location)
VALUES
(1, '놀러감', '써울') ;

SELECT * FROM t_feed;

CREATE TABLE t_feed_pics (
     ifeed_pics INT UNSIGNED AUTO_INCREMENT
	, ifeed INT UNSIGNED
	, pic VARCHAR(100) NOT NULL
	, created_at DATETIME NOT NULL DEFAULT CURRENT_TIMESTAMP		
	, PRIMARY KEY(ifeed_pics)
	, FOREIGN KEY(ifeed) REFERENCES t_feed(ifeed)
);
INSERT INTO t_feed_pics
(ifeed, pic)
VALUES
(2, 'aaa.jpg');







